<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReviewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:id="@+id/beachNameView"
            android:textStyle="bold"
            android:text="-"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Rating: "
                android:textSize="25sp"/>
            <EditText
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:textSize="25sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/ratingEditText"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="/5"
                android:textSize="25sp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/reviewDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:hint="Description"
            android:inputType="textMultiLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/reviewImageView"
                android:layout_marginStart="10dp">
            </ImageView>
            <Button
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:text="Upload Image"
                android:onClick="imageUpload"/>
        </LinearLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Stay Anonymous"
            android:textSize="25sp"
            android:id="@+id/anonCheck"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_width="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:layout_margin="5dp"
                android:onClick="backToReviewView"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Post Review"
                android:layout_margin="5dp"
                android:onClick="postReview"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>