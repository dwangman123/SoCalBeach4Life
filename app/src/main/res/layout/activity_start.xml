<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context = ".StartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/welcome"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/loginUsernameTextInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/loginPasswordTextInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textVisiblePassword"
            android:hint="password"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="@string/login_button_text"
            android:background="?colorPrimary"
            android:textColor="?colorOnPrimary"
            android:onClick="login"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/no_account"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/registerUsernameTextInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/registerPasswordTextInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textVisiblePassword"
            android:hint="password"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/registerNameTextInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:hint="name"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/registerPhoneTextInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:hint="phone number"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/registerButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="@string/register_button_text"
            android:background="?colorPrimary"
            android:textColor="?colorOnPrimary"
            android:onClick="register"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>